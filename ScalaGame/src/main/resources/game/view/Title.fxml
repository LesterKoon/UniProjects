<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="title-background" prefHeight="800.0" prefWidth="600.0" styleClass="title-background" stylesheets="@theme.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.view.TitleController">
   <children>
      <StackPane disable="true" layoutX="7.0" layoutY="14.0" prefHeight="300.0" prefWidth="550.0" AnchorPane.leftAnchor="7.0" AnchorPane.rightAnchor="-7.0" AnchorPane.topAnchor="14.0">
         <children>
            <ImageView fitHeight="300.0" fitWidth="560.0" pickOnBounds="true" StackPane.alignment="CENTER">
               <image>
                  <Image url="@../images/title.png" />
               </image>
            </ImageView>
         </children>
      </StackPane>
      <StackPane prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fitHeight="800.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/background.png" />
               </image>
            </ImageView>
         </children>
      </StackPane>
      <StackPane layoutY="330.0" prefHeight="470.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="330.0">
         <children>
            <VBox alignment="CENTER" prefHeight="290.0" prefWidth="210.0" spacing="25.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleStartGame" prefHeight="50.0" prefWidth="200.0" styleClass="btn" stylesheets="@theme.css" text="Start Game" textAlignment="CENTER">
                     <font>
                        <Font name="ROGFonts-Regular" size="18.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                     </cursor>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleInstructions" prefHeight="50.0" prefWidth="200.0" styleClass="btn" stylesheets="@theme.css" text="Instructions" textAlignment="CENTER">
                     <font>
                        <Font name="ROGFonts-Regular" size="18.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                     </cursor>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleSettings" prefHeight="50.0" prefWidth="200.0" styleClass="btn" stylesheets="@theme.css" text="Settings" textAlignment="CENTER">
                     <font>
                        <Font name="ROGFonts-Regular" size="18.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                     </cursor>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleExit" prefHeight="50.0" prefWidth="200.0" styleClass="btn" stylesheets="@theme.css" text="Exit" textAlignment="CENTER">
                     <font>
                        <Font name="ROGFonts-Regular" size="18.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                     </cursor>
                  </Button>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
